{
  "devDependencies": {
    "prebuildify": "^6.0.0",
    "tree-sitter-cli": "^0.25.3"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "dependencies": {
    "node-gyp-build": "^4.8.1",
    "tree-sitter": "^0.22.4"
  },
  "peerDependencies": {
    "tree-sitter": "^0.22.4"
  },
  "peerDependenciesMeta": {
    "tree_sitter": {
      "optional": true
    }
  },
  "tree-sitter": [
    {
      "scope": "source.rsm",
      "file-types": [
        "rsm"
      ],
      "first-line-regex": ":manuscript:"
    }
  ],
  "scripts": {
    "install": "node-gyp-build",
    "prebuildify": "prebuildify --napi --strip"
  },
  "files": [
    "grammar.js",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**"
  ]
}
