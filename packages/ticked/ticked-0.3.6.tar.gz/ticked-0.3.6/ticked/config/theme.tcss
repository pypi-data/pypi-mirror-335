#save:hover, #cancel-c:hover {
    background: $accent 60%;
    color: $text;   
}

.form-buttons Button {
    width: 15%;
    height: 3;
    background: $accent 40%;
    color: $text;
    text-style: none;
    border: none;
    margin: 1;
    padding: 1;
