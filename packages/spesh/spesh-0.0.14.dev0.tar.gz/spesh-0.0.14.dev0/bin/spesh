#!/usr/bin/env python3

# -------------------------------------- BASIC BONES MODULE
from fire import Fire
import datetime as dt

# -------------------------------------- start for new greg
import asyncio
import threading
import pandas as pd
import numpy as np
from code import InteractiveConsole
import curses
import sys
import ROOT


# ------------------------------------- LOCAL BASIC BONES MODULES
from spesh.topbar import fg, bg, fx
from spesh.version import __version__
from spesh import topbar



def main():
    print("Hello")#MAIN", __version__)
    t = topbar.TopBar(1)
    t.add_element("name", 1,5 + 12, f"SPESH  {__version__}" , bg.yellow + fg.black+ fx.bold)
    t.add_element("time", -22,10 + 12, str(dt.datetime.now())[:-4], fg.white)
    t.place()
    t.update_element("time", str(dt.datetime.now())[:-4] )


if __name__ == "__main__":
    Fire(main)
